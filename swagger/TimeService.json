  "components": {
    "schemas": {
      "CreateLeaveTimeRequest": {
        "type": "object",
        "required": [
          "UserId",
          "StartLeave",
          "EndTime",
          "LeaveType"
        ],
        "properties": {
          "UserId": {
            "description": "User working on the current project.",
            "type": "string",
            "format": "uuid",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "Minutes": {
            "type": "integer"
          },
          "StartTime": {
            "description": "Start time leave from task.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2020-07-18T08:23"
          },
          "EndTime": {
            "description": "End time leave from task.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "LeaveType": {
            "description": "The reason for which lost time.",
            "type": "string",
            "enum": [
              "Vacation",
              "SickLeave",
              "Training",
              "Idle"
            ],
            "example": "Vacation"
          },
          "Comment": {
            "description": "Description for alloted time.",
            "type": "string"
          }
        }
      },
      "EditWorkTimeRequest": {
        "type": "array",
        "minItems": 1,
        "example": [
          {
            "op": "replace",
            "path": "/ProjectId",
            "value": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "op": "replace",
            "path": "/Title",
            "value": {
              "type": "string",
              "description": "new title"
            }
          },
          {
            "op": "replace",
            "path": "/Description",
            "value": {
              "type": "string",
              "description": "new description"
            }
          },
          {
            "op": "replace",
            "path": "/StartTime",
            "value": {
              "type": "string",
              "format": "date-time",
              "pattern": "YYYY-MM-DDTHH:mm",
              "example": "2020-07-18T08:23",
              "description": "new start time"
            }
          },
          {
            "op": "replace",
            "path": "/EndTime",
            "value": {
              "type": "string",
              "format": "date-time",
              "pattern": "YYYY-MM-DDTHH:mm",
              "example": "2020-07-18T08:23",
              "description": "new end time"
            }
          }
        ],
        "items": {
          "$ref": "#/components/schemas/PatchWorkTimeDocument"
        }
      },
      "PatchWorkTimeDocument": {
        "type": "object",
        "required": [
          "op",
          "path"
        ],
        "properties": {
          "op": {
            "type": "string",
            "description": "The operation to be performed.",
            "enum": [
              "add",
              "replace",
              "delete"
            ]
          },
          "path": {
            "type": "string",
            "description": "A JSON-Pointer.",
            "enum": [
              "/Minutes",
              "/ProjectId",
              "/Title",
              "/Description",
              "/StartTime",
              "/EndTime"
            ]
          },
          "value": {
            "type": "object",
            "description": "The value to be used within the operations."
          }
        }
      },
      "CreateWorkTimeRequest": {
        "type": "object",
        "required": [
          "UserId",
          "Minutes",
          "StartTime",
          "EndTime",
          "ProjectId"
        ],
        "properties": {
          "UserId": {
            "description": "User working on the current project.",
            "type": "string",
            "format": "uuid",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "Minutes": {
            "type": "integer"
          },
          "StartTime": {
            "description": "Start date task execution.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2020-07-18T08:23"
          },
          "EndTime": {
            "description": "Task finish deadline.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "Title": {
            "description": "Short description of the task",
            "type": "string"
          },
          "ProjectId": {
            "description": "The specify project's Id.",
            "type": "string",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Description": {
            "description": "Description for alloted time.",
            "type": "string"
          }
        }
      },
      "WorkTimeInfo": {
        "type": "object",
        "properties": {
          "Id": {
            "description": "The work time Id.",
            "type": "string",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Project": {
            "$ref": "#/components/schemas/ProjectInfo"
          },
          "UserId": {
            "type": "string",
            "format": "uuid",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "CreatedBy": {
            "type": "string",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Minutes": {
            "type": "integer"
          },
          "StartTime": {
            "description": "Start date task execution.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2020-07-18T08:23"
          },
          "EndTime": {
            "description": "Task finish deadline.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "CreatedAt": {
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "Title": {
            "description": "Short description of the task",
            "type": "string"
          },
          "Description": {
            "description": "Description for alloted time.",
            "type": "string"
          }
        }
      },
      "LeaveTimeInfo": {
        "type": "object",
        "properties": {
          "Id": {
            "description": "The leave time Id.",
            "type": "string",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "UserId": {
            "type": "string",
            "format": "uuid",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "CreatedBy": {
            "type": "string",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Minutes": {
            "type": "integer"
          },
          "StartTime": {
            "description": "Start date task execution.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2020-07-18T08:23"
          },
          "EndTime": {
            "description": "Task finish deadline.",
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "CreatedAt": {
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "LeaveType": {
            "description": "The reason for which lost time.",
            "type": "string",
            "enum": [
              "Vacation",
              "SickLeave",
              "Training",
              "Idle"
            ],
            "example": "Vacation"
          },
          "Comment": {
            "description": "Description for alloted time.",
            "type": "string"
          }
        }
      },
      "ProjectInfo": {
        "type": "object",
        "properties": {
          "Id": {
            "description": "Unique project identifier.",
            "type": "string",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Name": {
            "description": "Project name.",
            "type": "string",
            "example": "Digital Office",
            "nullable": false
          },
          "ShortName": {
            "description": "Project short name.",
            "type": "string",
            "example": "DO",
            "nullable": true
          },
          "Status": {
            "$ref": "#/components/schemas/ProjectStatusType",
            "nullable": false
          },
          "Description": {
            "type": "string",
            "nullable": true
          },
          "ShortDescription": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ProjectStatusType": {
        "type": "string",
        "description": "Project status.\nMay be empty, default value: 'Active'.\n,Enum numbers description\n* 0 - Active,\n* 1 - Failed,\n* 2 - Abandoned,\n* 3 - Rejected,\n* 4 - Closed,\n* 5 - Suspend",
        "enum": [
          "Active",
          "Closed",
          "Suspend"
        ],
        "nullable": false,
        "example": "Suspend"
      },
      "FindResultResponseWorkTimeInfo": {
        "type": "object",
        "properties": {
          "Status": {
            "$ref": "#/components/schemas/OperationResultStatusType"
          },
          "TotalCount": {
            "type": "integer",
            "description": "Total number of finded by filter work times."
          },
          "Body": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WorkTimeInfo"
            }
          },
          "Errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "FindResultResponseLeaveTimeInfo": {
        "type": "object",
        "properties": {
          "Status": {
            "$ref": "#/components/schemas/OperationResultStatusType"
          },
          "TotalCount": {
            "type": "integer",
            "description": "Total number of finded by filter leave times."
          },
          "Body": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LeaveTimeInfo"
            }
          },
          "Errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "ErrorResponse": {
        "description": "Error information",
        "type": "object",
        "properties": {
          "UtcTime": {
            "type": "string",
            "format": "date-time",
            "pattern": "YYYY-MM-DDTHH:mm",
            "example": "2021-06-18T08:23"
          },
          "Header": {
            "type": "string"
          },
          "Message": {
            "description": "A human readable message providing more details about the error.",
            "type": "string"
          }
        }
      },
      "OperationResultResponse": {
        "description": "Response object for action operations.",
        "type": "object",
        "properties": {
          "Body": {
            "type": "object"
          },
          "Status": {
            "$ref": "#/components/schemas/OperationResultStatusType"
          },
          "Errors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "OperationResultStatusType": {
        "type": "string",
        "description": "Operation complition result status.",
        "enum": [
          "FullSuccess",
          "PartialSuccess",
          "Failed"
        ],
        "example": "FullSuccess",
        "default": "FullSuccess"
      }
    },
    "parameters": {
      "securityToken": {
        "name": "token",
        "in": "header",
        "description": "The JWT token.",
        "schema": {
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiYWRtaW4iOnRydWV9.TJVA95OrM7E2cBab30RMHrHDcEfxjoYZgeFONFh7HgQ"
        },
        "required": true
      }
    }
  }
}
