        ],
        "operationId": "createImage",
        "description": "The method attempts to add image to user/certificate/education.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateImageRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Ok. Image was added to entity.",
