  "components": {
    "schemas": {
      "LeaveTimeRequest": {
        "required": [
          "EndLeave",
          "LeaveType",
          "StartLeave",
          "WorkerUserId"
        ],
        "type": "object",
        "properties": {
          "WorkerUserId": {
            "type": "string",
            "description": "Users working on the current project.",
            "format": "UUID",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "StartLeave": {
            "pattern": "YYYY-MM-DDTHH:mm",
            "type": "string",
            "description": "Start time leave from task.",
            "format": "date-time"
          },
          "EndLeave": {
            "pattern": "YYYY-MM-DDTHH:mm",
            "type": "string",
            "description": "End time leave from task.",
            "format": "date-time"
          },
          "LeaveType": {
            "type": "integer",
            "description": "The reason for which lost time.",
            "example": 1
          },
          "Comment": {
            "type": "string",
            "description": "Description for alloted time."
          }
        }
      },
      "EditWorkTimeRequest": {
        "required": [
          "EndTime",
          "Id",
          "ProjectId",
          "StartTime",
          "WorkerUserId"
        ],
        "type": "object",
        "properties": {
          "Id": {
            "type": "string",
            "description": "WorkTime id",
            "format": "UUID",
            "example": "06d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "WorkerUserId": {
            "type": "string",
            "description": "Users working on the current project.",
            "format": "UUID",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "StartTime": {
            "pattern": "YYYY-MM-DDTHH:mm",
            "type": "string",
            "description": "Start date task execution.",
            "format": "date-time"
          },
          "EndTime": {
            "pattern": "YYYY-MM-DDTHH:mm",
            "type": "string",
            "description": "Task finish deadline.",
            "format": "date-time"
          },
          "Title": {
            "type": "string",
            "description": "Short description of the task"
          },
          "ProjectId": {
            "type": "string",
            "description": "The specify project's Id.",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Description": {
            "type": "string",
            "description": "Description for alloted time."
          }
        }
      },
      "WorkTimeRequest": {
        "required": [
          "EndTime",
          "ProjectId",
          "StartTime",
          "Title",
          "WorkerUserId"
        ],
        "type": "object",
        "properties": {
          "WorkerUserId": {
            "type": "string",
            "description": "Users working on the current project.",
            "format": "UUID",
            "example": "05d525f7-27d2-4549-be07-ed63d96d287f"
          },
          "StartTime": {
            "pattern": "YYYY-MM-DDTHH:mm",
            "type": "string",
            "description": "Start date task execution.",
            "format": "date-time"
          },
          "EndTime": {
            "pattern": "YYYY-MM-DDTHH:mm",
            "type": "string",
            "description": "Task finish deadline.",
            "format": "date-time"
          },
          "Title": {
            "type": "string",
            "description": "Short description of the task"
          },
          "ProjectId": {
            "type": "string",
            "description": "The specify project's Id.",
            "format": "uuid",
            "example": "80d13a19-872e-45bc-b1ed-a01d6fac3c0f"
          },
          "Description": {
            "type": "string",
            "description": "Description for alloted time."
          }
        }
      }
    },
